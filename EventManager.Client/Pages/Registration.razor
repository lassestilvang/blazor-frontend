
@page "/registration"
@using EventManager.Client.Models
@rendermode InteractiveAuto

<PageTitle>Registration</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient bg-primary text-white text-center py-3">
                    <h3 class="mb-0 fw-bold">Event Registration</h3>
                </div>
                <div class="card-body p-4">
                    @if (IsSuccess)
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="bi bi-check-circle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Success!</strong> You have been successfully registered for the event.
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <button class="btn btn-outline-primary" @onclick="ResetForm">Register Another</button>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@Model" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <InputText class="form-control" placeholder="Enter your full name" @bind-Value="Model.Name" />
                                </div>
                                <ValidationMessage For="@(() => Model.Name)" class="text-danger small mt-1" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <InputText class="form-control" placeholder="name@example.com" @bind-Value="Model.Email" />
                                </div>
                                <ValidationMessage For="@(() => Model.Email)" class="text-danger small mt-1" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Ticket Type</label>
                                <div class="input-group">
                                     <span class="input-group-text"><i class="bi bi-ticket-perforated"></i></span>
                                    <InputSelect class="form-select" @bind-Value="Model.TicketType">
                                        <option value="General">General Admission</option>
                                        <option value="VIP">VIP Access</option>
                                        <option value="Student">Student Discount</option>
                                    </InputSelect>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                    Register Now
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegistrationModel Model { get; set; } = new();
    private bool IsSuccess { get; set; } = false;

    private void HandleValidSubmit()
    {
        // In a real app, we would send this to an API
        IsSuccess = true;
    }

    private void ResetForm()
    {
        Model = new RegistrationModel();
        IsSuccess = false;
    }
}
